---
import { getActualViewers } from '../components/api/Viewer'
import WebringButtons from './buttons/Webring'

const viewers = await getActualViewers(Astro);
---


<footer class="fixed text-secondary bottom-2 text-lg text-center w-full" transition:persist>
    <p>
        {viewers} visitors (its bug)
        | <a href={import.meta.env.GITHUB_URL} class="hover:text-main" target="_blank">github (click)</a> |
        2025
    </p>
    <WebringButtons nickname={import.meta.env.WEBRING_NICKNAME}/>
</footer>
