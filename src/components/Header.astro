---
import type Props from '../types/Prefix'
import VideoButtons from './buttons/Video'


const { prefix } = Astro.props as Props
const navigation = [
    {
        name: 'main',
        href: '/'
    },
    {
        name: 'blog',
        href: '/posts'
    },
    {
        name: 'donate',
        href: '/donate'
    }
    ,
    {
        name: 'watch',
        href: '/video'
    }
]
---


<header class="relative" transition:persist>
    <div class="text-main flex justify-center items-center h-16">
        <div class="flex">
            {navigation.map((link) => (
                <a
                    href={link.href}
                    class="hover:text-secondary transition-colors px-5 text-lg"
                >
                    {link.name}
                </a>
            ))}
        </div>

        <div class="absolute right-0 mr-56 flex gap-3">
            <VideoButtons prefix={prefix} client:idle/>
        </div>
    </div>
</header>
